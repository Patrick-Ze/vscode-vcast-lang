{
    "name": "vcast-lang",
    "displayName": "VectorCAST Language",
    "description": "VectorCAST Language support for VS Code",
    "version": "0.1.0",
    "publisher": "PatrickZe",
    "engines": {
        "vscode": "^1.45.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/Patrick-Ze/vscode-vcast-lang"
    },
    "contributes": {
        "languages": [
            {
                "id": "vcast.tst",
                "aliases": [
                    "VCAST Script",
                    "vcast script"
                ],
                "extensions": [
                    ".tst"
                ],
                "configuration": "./language-configuration.json"
            },
            {
                "id": "vcast.env",
                "aliases": [
                    "VCAST Enviro",
                    "vcast enviro"
                ],
                "extensions": [
                    ".env"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "vcast.tst",
                "scopeName": "vcast.tst",
                "path": "./syntaxes/vcast.tst.tmLanguage.json"
            },
            {
                "language": "vcast.env",
                "scopeName": "vcast.env",
                "path": "./syntaxes/vcast.env.tmLanguage.json"
            }
        ]
    }
}
